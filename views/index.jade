extends layout

block content
	div(ng-controller='HomeCtrl')
		include navbar.jade

		.container
			.jumbotron
				img(src='img/ascoli-nel-cuore.png')
				h1 {{ 'SITE.NAME' | translate | uppercase }}
				p(translate).lead SITE.DESCRIPTION

				button(ng-click="changeLanguage('it')") Italiano
				button(ng-click="changeLanguage('en')") English