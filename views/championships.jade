extends layout

block content
	div(ng-controller='ChampionshipsCtrl') 
		//-ng-init="setChampionships( #{JSON.stringify(championships)} )")
		include navbar.jade
		
		h1(ng-cloak) {{ 'CHAMPS.TITLE' | translate | uppercase }}

		.row
			.col-md-5.col-md-offset-1.panel-group#accordion
				each year in [1950, 1960, 1970, 1980, 1990, 2000, 2010]
					.panel.panel-default
						.panel-heading
							h4.panel-title
								a(data-toggle='collapse', 
									data-parent='#accordion', 
									ng-click='getDecade(' + year + ')',
									href='#collapse' + year)
									span(translate='CHAMPS.HEADER', translate-values='{ year: "' + year + '"}' , ng-cloak)
						div(id='collapse' + year).panel-collapse.collapse
							//.panel-body
								p= "{{championships['" + year + "']}}"
							table.table
								thead: tr
									th(translate='CHAMPS.SEASON')
									th(translate='CHAMPS.LEAGUE')
									th(translate='CHAMPS.PLACING')
								tbody: tr(ng-repeat='item in championships["' + year + '"]')
									td {{item.season}}
									td {{item.league}}
									td {{item.placing}}
